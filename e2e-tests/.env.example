# Jira Clone E2E Test Configuration

# Application URLs
BASE_URL=http://localhost:5173
API_URL=http://localhost:4000/api

# Test Project Configuration
# Use existing project (set to 'true' to use existing project, 'false' to create new)
USE_EXISTING_PROJECT=false
# If using existing project, set the ID
TEST_PROJECT_ID=1
# Project details (used for creation or validation)
TEST_PROJECT_NAME=E2E Test Project
TEST_PROJECT_KEY=E2E
TEST_PROJECT_DESC=Automated E2E testing project for Jira clone

# Test User Configuration
# If using existing user, set the ID
TEST_USER_ID=1
# User details (used for creation or validation)
TEST_USER_EMAIL=test@example.com
TEST_USER_NAME=Test User
TEST_USER_PASSWORD=testpass123

# Test Execution Settings
HEADLESS=true
SLOW_MO=50
TEST_TIMEOUT=30000
TEST_RETRIES=1
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720

# Test Data Management
CLEANUP_AFTER_TESTS=true
PRESERVE_TEST_PROJECT=false

# Browser Configuration
BROWSER=chromium

# Test Artifacts
SAVE_ARTIFACTS=true
ARTIFACT_RETENTION_DAYS=7

# Environment-specific overrides
# For testing against different environments
# ENVIRONMENT=staging
# BASE_URL=https://staging.yourapp.com
# API_URL=https://staging.yourapp.com/api